  -ms-transform: rotate(45deg);
  -o-transform: rotate(45deg);
  transform: rotate(45deg);
  background-color: red;
  left: 50px;
  top: 14px;
}
.heart-shape:before,
.heart-shape:after{
  position: absolute;
  width: 16px;
  height: 16px;
  content: '';
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -o-border-radius: 50%;
  border-radius: 50%;
  background-color: red;;
}
.heart-shape:before{
  bottom: 0px;
  left: -8px;
}
.heart-shape:after{
  top: -8px;
  right: 0px;
